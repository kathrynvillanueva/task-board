@import url(https://fonts.googleapis.com/css?family=Dosis:400);

@media screen and (max-width: 550px) {
  .toolbar-title {
    visibility: hidden;
    clear: both;
    float: left;
    margin: 10px auto 5px 20px;
    width: 28%;
    display: none;
  }
}

.modal-layout {
  background: #424242 !important;
  padding: 5px 5px 5px 5px;
}

.project-form-div {
  width: 100%;
  margin: 20px 0 0px;
}

.side-nav {
  color: #ece9ec;
  background: #22252a;
  overflow: auto;
}

.proj-side-nav {
  color: #ece9ec;
  background: #22252a;
  overflow: auto;
}

.grab-task {
  cursor: grab;
}

.board-cards {
  height: 100%;
  background-color: #F6F6F6;
  width: 350px;
}

.board-hr {
  margin-right: -10%;
  margin-left: -10%;
}

.list-group {
  overflow-x: hidden;
  overflow-y: auto;
  height: calc(100% - 52px);
}

.list-group-labels {
  overflow: auto;
  height: calc(100% - 52px);
}

.board-label {
  height: 50px;
  padding: 12px;
}

.hover-underline:hover {
  text-decoration: underline;
  cursor: pointer
}

.hover-grey:hover{
  background: #f0f0f0;
  color: #22252a;
  cursor: pointer;
}

.radius-4 {
  border: solid 1px #c4c4c4;
  background: white;
  border-radius: 4px;
}

.input-icon > i {
  font-size: 13px !important;
}

.input-icon-error-focused > i > .q-if-addon, .q-if-focused:not(.q-if-readonly) .q-if-control {
  color: black;
}

.input-icon-error > i > .q-if-addon, .q-if-inverted .q-if-control {
  color: #979797;
}

.q-if-inverted .q-input-target {
  color: black;
}

.restricted {
	background: linear-gradient(to right, #30CFD0 0%, #00e676 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	font-size: 170px;
}

.mt-12 {
  margin-top: 12px;
}

.el-table__body-wrapper > table > tbody > tr > td {
  padding: 3px !important;
}
.el-table__header-wrapper > table > thead > tr > th {
  padding: 3px !important;
}
.el-table__fixed-right > .el-table__fixed-body-wrapper > table > tbody > tr > td {
  padding: 3px !important;
}

.el-table__header-wrapper > table > thead > tr > th {
  padding: 3px !important
}

.el-table__fixed-right > .el-table__fixed-body-wrapper > table > tbody > tr > td {
  padding: 3px !important;
}

.el-table__fixed > .el-table__fixed-body-wrapper > table > tbody > tr > td {
  padding: 3px !important;
}

.q-field-no-input .q-field-bottom {
  border-top: 0px;
}

.width-350 {
  width: 350px;
}
.fc-row.fc-week.fc-widget-content.fc-rigid {
  height: 60px !important;
}

.fc-toolbar.fc-header-toolbar h2 {
  height: 10px;
  font-size: 20px;
}

.fc-event {
  vertical-align: center;
  font-weight: bold;
  border-radius: 10px 10px 10px 10px;
}

.fc-scroller.fc-day-grid-container {
  height: 360px !important;
}

.center-text-random-bg {
  height: 28px;
  width: 28px;
  color: #000;
  text-align: center;
  vertical-align: middle;
  padding-top: 4px;
  border-radius: 5px;
}

.title {
  font-size: 24px !important;
}

.modal-layout {
  background: #424242 !important;
  padding: 5px 5px 5px 5px;
}

.pagination-page {
  font-weight: bold;
  margin: auto 0 auto 0;
}

.pagination-div {
  display: flex;
  justify-content: center;
}

.sidenav {
  color: #ece9ec;
  width: 100%;
  background: #57636f;
  height: 100%;
  overflow-y: scroll;
}

.main-header {
  background: #2b363d !important;
}


.form-card {
  padding: 20px;
}

.search {
  height: 30px;
  width: 200px;
  border-radius: 0px 5px 5px 0px;
  -webkit-box-shadow: none;
}

.search-filter {
  height: 30px;
  width: 150px;
  border-radius: 5px 0 0 5px;
  -webkit-box-shadow: none;
}

.calendar-header {
  background: black !important;
  padding: 5px 5px 5px 5px;
  height: 10% !important;
}

.views {
  padding: 30px;
}

.overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 30%;
  width: 100%;
  opacity: 0;
  transition: .5s ease;
  background: rgba(0, 0, 0, 0.9);
}

.img-modal:hover .overlay {
  opacity: 1;
}

.calendar-template-design {
  font-size: 18px;
  font-weight: bold;
  background-color: #f5f5f5;
  text-align: center;
  height: 466px !important;
}

.calendar {
  height: 515px;
}

.loading {
  z-index:10;
}

#external-events {
  z-index: 2;
  top: 20px;
  left: 20px;
  width: 100%;
  padding: 0 10px;
}

#external-events .fc-event {
  margin: 1em 0;
  cursor: move;
  border-radius: 10px;
  height: 20px;
  text-align: center;
  margin: 10px 20px 0px 20px;
}
.textbox > .quillWrapper > .ql-container >.ql-editor {
  min-height: 0px !important;
}

.editor > .quillWrapper > .ql-container {
  height: auto !important;
}

.image-fit > p > img {
  width: 100%;
  height: 100%;
}

#forumImages {
  max-width: 100%;
}

#blockageCommentImages {
  max-width: 360px;
}

#testingImages {
  max-width: 100%;
}

.modal-footer > .q-layout-footer {
  box-shadow: none;
  -webkit-box-shadow: none;
}

div.col.row.items-center.q-input-chips.justify-start {
  max-height: 111px;
  overflow: auto;
}

.project-overview-design {
  position: relative;
  right: 20px;
  bottom: 75px
  float:right;
  margin: 0px;
  opacity: 0.8;
  font-weight: bold;
  font-size: 25px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 8px;
  padding-top: 15px;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px
  background-color: white;
}

.list-complete-item {
  padding: 0px;
  margin: 0px;
  transition: all 1s;
}

.list-complete-enter, .list-complete-leave-active {
  opacity: 0;
}

.div-separate {
  flex-wrap: nowrap !important;
  color: red;
}

.settings:hover {
  background-color: #707174;
  cursor: pointer;
}
